<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="toolView" prefHeight="400.0" prefWidth="150.0" style="-fx-background-color: rgb(230,230,230); -fx-background-insets: 5; -fx-effect: dropshadow(three-pass-box, rgb(169,169,169), 10, 0, 0, 0)dropshadow(three-pass-box, purple, 10, 0, 0, 0);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teamjeaa.obpaint.controller.ToolController">
    <children>
        <ColorPicker fx:id="cp" editable="true" layoutX="9.0" layoutY="313.0" prefHeight="70.0" prefWidth="133.0" style="-fx-background-color: transparent; -fx-border-color: grey;" />
        <ToggleButton fx:id="pencilButton" layoutX="15.0" layoutY="30.0" mnemonicParsing="false" onAction="#onPencilButton" prefHeight="35.0" prefWidth="35.0">
         <graphic>
                <ImageView fitHeight="27.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/baseline_edit_black_18dp.png" />
                    </image>
                </ImageView>
         </graphic>
        </ToggleButton>
        <ToggleButton fx:id="brushButton" layoutX="105.0" layoutY="170.0" mnemonicParsing="false" onAction="#onLineButton" prefHeight="35.0" prefWidth="35.0">
         <graphic>
                <ImageView fitHeight="21.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/line.png" />
                    </image>
                </ImageView>
         </graphic>
        </ToggleButton>
        <ToggleButton fx:id="eraserButton" layoutX="60.0" layoutY="100.0" mnemonicParsing="false" onAction="#onEraserButton" prefHeight="35.0" prefWidth="35.0">
         <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/rubber.png" />
                    </image>
                </ImageView>
         </graphic>
        </ToggleButton>
        <ToggleButton fx:id="circleButton" layoutX="15.0" layoutY="170.0" mnemonicParsing="false" onAction="#onCircleButton" prefHeight="35.0" prefWidth="35.0">
         <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/circle-512.png" />
                    </image>
                </ImageView>
         </graphic>
        </ToggleButton>
        <ToggleButton fx:id="rectangleButton" layoutX="60.0" layoutY="170.0" mnemonicParsing="false" onAction="#onRectangleButton" prefHeight="35.0" prefWidth="35.0">
         <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/button_shape_rectangle-512.png" />
                    </image>
                </ImageView>
         </graphic>
        </ToggleButton>
      <Slider layoutX="19.0" layoutY="292.0" prefHeight="13.0" prefWidth="112.0" />
      <TextField layoutX="19.0" layoutY="256.0" prefHeight="31.0" prefWidth="112.0" promptText="Size (OBS! No decimals)">
         <font>
            <Font size="9.0" />
         </font>
      </TextField>
      <ToggleButton fx:id="moveButton" layoutX="15.0" layoutY="100.0" mnemonicParsing="false" onAction="#onMoveButton" prefHeight="35.0" prefWidth="35.0">
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/move.png" />
               </image>
            </ImageView>
         </graphic>
      </ToggleButton>
      <Label layoutX="10.0" layoutY="8.0" text="Pencil" />
      <Label layoutX="10.0" layoutY="75.0" text="Tools" />
      <Label layoutX="10.0" layoutY="145.0" text="Shapes" />
    </children>
</AnchorPane>
